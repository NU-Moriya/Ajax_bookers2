<% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book.id,book.favorites), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
      <%= book.favorites.count %>
    <% end %>
  </td>
<% else %>
  <td>
    <%= link_to book_favorites_path(book_id: book.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
      <%= book.favorites.count %>
    <% end %>
  </td>
<% end %>
