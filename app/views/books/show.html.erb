
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>
					<div id="favorites_buttons_<%= @book.id %>">
            <%= render partial: 'favorites/favorite', locals: { book: @book} %>
          </div>
					<td>コメント数:<%= @book.book_comments.count %></td>
					<% if @book.user.id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
		</table>
		<table>
			<% @comments.each do |comment| %>
				<tr>
					<td>
						<%= link_to user_path(comment.user) do %>
							<%= attachment_image_tag(comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= comment.user.name %>
						<% end %>
					</td>
					<td>
						<%= comment.content %>
					</td>
					<% if comment.user_id == current_user.id %>
						<td><%= link_to "Destroy", book_book_comment_path(@book.id, comment.id), method: :delete, class:"btn btn-danger" %></td>
					<% end %>
				</tr>
			<% end %>
		</table>
		<table>
			<tr> 
				
				<%= form_with(model:[@book,@comment], local: true) do |f| %>
					<%= f.text_area :content, class: "col-xs-8" %>
					<%= f.submit "送信" %>
				<% end %>
			</tr>
		</table>
	</div>
</div>
